<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <title>Question Guide</title>
</head>
<body>
    <%- include('partials/navbar.ejs'); -%>

    <div class="container">
        <h5><strong><%= question.title %></strong></h5>
        <small><%= question.description %></small>
        <hr>

        <form class="mt-4" method="post" action="/answer">
            <h6>Contribua abaixo com sua explicação :)</h6>
            <textarea class="form-control" name="body" id="body" cols="30" rows="10" placeholder="Digite a sua resposta*" required></textarea>
            <input type="hidden" name="question" id="question" value="<%= question.id %>">
            <button type="submit" class="btn btn-dark mt-4">Responder</button>
        </form>
        <h5 class="my-4 text-center text-uppercase"><strong>Respostas</strong></h5>
        <% answers.forEach(answer => { %>
            <div class="card mb-2">
                <div class="card-body">
                    <small>"<%= answer.body %>"</small>
                </div>
            </div>
        <% }) %>
    </div>  
</body>

<%- include('partials/footer.ejs'); -%>